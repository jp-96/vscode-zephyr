{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Config build.dir-fmt",
            "type": "shell",
            "command": "west",
            "args": [
                "config",
                "build.dir-fmt",
                "build"
            ],
            "problemMatcher": []
        },
        {
            "label": "fix-microbit-perms",
            "type": "shell",
            "command": "${workspaceFolder}/fix-microbit-perms.sh",
            "problemMatcher": []
        },
        {
            "label": "Build bbc_microbit",
            "type": "shell",
            "command": "west",
            "args": [
                "build",
                "-p",
                "auto",
                "-b",
                "bbc_microbit"
            ],
            "options": {
                "cwd": "${workspaceFolder}/zephyrproject"
            },
            "group": {
                "kind": "build"
            },
            "problemMatcher": [],
            "dependsOn": [
                "Config build.dir-fmt"
            ]
        },
        {
            "label": "Build bbc_microbit_v2",
            "type": "shell",
            "command": "west",
            "args": [
                "build",
                "-p",
                "auto",
                "-b",
                "bbc_microbit_v2"
            ],
            "options": {
                "cwd": "${workspaceFolder}/zephyrproject"
            },
            "group": {
                "kind": "build"
            },
            "problemMatcher": [],
            "dependsOn": [
                "Config build.dir-fmt"
            ]
        },
        {
            "label": "Flash hex",
            "type": "shell",
            "command": "west",
            "args": [
                "flash"
            ],
            "options": {
                "cwd": "${workspaceFolder}/zephyrproject"
            },
            "problemMatcher": [],
            "dependsOn": [
                "fix-microbit-perms"
            ]
        },
        {
            "label": "Copy bbc_microbit.hex",
            "type": "shell",
            "command": "cp",
            "args": [
                "${workspaceFolder}/zephyrproject/build/zephyr/zephyr.hex",
                "${workspaceFolder}/zephyrproject/microbit-v1.hex"
            ],
            "problemMatcher": []
        },
        {
            "label": "Copy bbc_microbit_v2.hex",
            "type": "shell",
            "command": "cp",
            "args": [
                "${workspaceFolder}/zephyrproject/build/zephyr/zephyr.hex",
                "${workspaceFolder}/zephyrproject/microbit-v2.hex"
            ],
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "micro:bit universal hex",
            "command": "node",
            "args": [
                "${workspaceFolder}/.vscode/utils/uhex.js",
                "${workspaceFolder}/zephyrproject/microbit-v1.hex",
                "${workspaceFolder}/zephyrproject/microbit-v2.hex",
                "${workspaceFolder}/zephyrproject/microbit-universal.hex"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build and flash bbc_microbit",
            "dependsOn": [
                "Build bbc_microbit",
                "Flash hex"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": [],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Build and flash bbc_microbit_v2",
            "dependsOn": [
                "Build bbc_microbit_v2",
                "Flash hex"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": [],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Build all",
            "dependsOn": [
                "Build bbc_microbit",
                "Copy bbc_microbit.hex",
                "Build bbc_microbit_v2",
                "Copy bbc_microbit_v2.hex",
                "micro:bit universal hex"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ]
}